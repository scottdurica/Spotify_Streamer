<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eagles"
        android:id="@+id/tv_player_artist_name"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Greatest Hits"
        android:id="@+id/tv_player_album_name"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_player_album_cover"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_none"
        android:layout_weight="1.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take it to the limit"
        android:id="@+id/tv_player_song_name"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb_player_grabber_bar"
        android:layout_gravity="center_horizontal"
        android:max="50"
        android:progress="1"
        android:indeterminate="false"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0:00"
            android:id="@+id/tv_player_0"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="30:00"
            android:id="@+id/tv_player_30"
            android:layout_weight="1.0"
            android:gravity="right" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ib_player_previous"
            android:src="@drawable/ic_skip_previous_black_48dp"
            android:layout_weight="1.0"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ib_player_play_pause"
            android:src="@drawable/ic_play_arrow_black_48dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ib_player_next"
            android:src="@drawable/ic_skip_next_black_48dp"
            android:layout_alignTop="@+id/ib_player_play_pause"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>